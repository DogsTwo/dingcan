<script type="text/javascript" src="/public/js/jquery-1.12.3.min.js"></script>
<script type="text/javascript" src="/public/js/bootstrap.min.js"></script>
<script>
    $.get("/leibie1",function(data){
        $.each(data.results,function(i, n){
            //创建一个tr标签
            $(' <option id="cai" data-sid="'+n.sid +'">'+n.sid +'</option>').appendTo($('#zhonglei'));
        });
    });
    $.get("/caixi",function(data){
        console.log(data);
        $.each(data.results,function(i, n){
            //创建一个tr标签
            $tr = $("<tr class='row'></tr>");
            $td = $("<td class='col-md-4'></td>").appendTo($tr);
            $p = $("<p style='text-align: center'></p>").html(n.name).appendTo($td);
            $("<img style='width: 114px;height: 81px;margin: 0 auto; display: block;' src='../uploads/"+ n.tu + ".jpg'>").appendTo($td)
            $("<td class='col-md-2 zhong'style='line-height: 131px;'></td>").html(n.lei).appendTo($tr);
            $("<td class='col-md-1 zhong' style='line-height: 131px;'></td>").html(n.monge).appendTo($tr);
            if (n.jingpin == "" && n.rexiao == "") {
                $("<td class='col-md-1 zhong' style='line-height: 131px; color: red;'></td>").html("×").appendTo($tr);
            }else{
                $("<td class='col-md-1 zhong' style='line-height: 131px; color: green;'></td>").html("√").appendTo($tr);
            }
            if (n.rexiao == "热销") {
                $("<td class='col-md-1 zhong' style='line-height: 131px; color: green;'></td>").html("√").appendTo($tr);
            }else{
                $("<td class='col-md-1 zhong' style='line-height: 131px; color: red;'></td>").html("×").appendTo($tr);
            }
            if (n.jingpin == "精品") {
                $("<td class='col-md-1 zhong' style='line-height: 131px;'></td>").html("√").appendTo($tr);
            }else{
                $("<td class='col-md-1 zhong' style='line-height: 131px;'></td>").html("×").appendTo($tr);
            }

            $("<td class='col-md-2' style='line-height: 131px;'><input type='button' style='margin: 0 20px;' class='btn btn-danger delbtn' value='删除' data-sid='" + n.name +"'/> <input type='button' id='xiu' class='btn btn-warning' data-toggle='modal' data-target='#myModal'  value='修改' data-sid='" + n.name + "'/></td>").appendTo($tr);
            // 上树
            $tr.appendTo($("#tbody"));
        });
    })
    $("#tbody").delegate("#xiu","click",function(){
        var name = $(this).attr("data-sid");
        console.log(name)
        $.get("/chazhao/"+name,function (date) {
            $.get("/leibie1",function(data){
                $.each(data.results,function(i, n){
                    //创建一个tr标签
                    $(' <option>'+n.sid +'</option>').appendTo($('#lei'));
                });
            });
            $("select[name=lei]").val(date.info.lei);
            $("input[name=name]").val(date.info.name);
            $("input[name=monge]").val(date.info.monge);
            $("input[name=pai]").val(date.info.pai);
            $("textarea[name=miao]").val(date.info.miao);
            if(date.info.shenhe == "未审核"){
                $("input[value='未审核']").attr({"checked":"checked"});
            }else{
                $("input[value='审核']").attr({"checked":"checked"});
            }
            if (date.info.jingpin == "精品"){
                $("input[name=jingpin]").attr({"checked":"checked"});
            }
            if (date.info.rexiao == "热销"){
                $("input[name=rexiao]").attr({"checked":"checked"});
            }
        })
    })
    $("#tbody").delegate(".delbtn","click",function () {
        if(!confirm("真的要删除么")){
            return;
        }
        var name = $(this).attr("data-sid");
        var $this = $(this);
        $.ajax({
            url : "/shan/" + name,
            type : "delete",
            success : function(data){
                if(data.result == 1){
                    alert("删除成功");
                    $this.parents("tr").remove();
                }else{
                    alert("服务器错误！");
                }
            }
        });
    })
    $("#zhonglei").blur(function () {
        var lei =  $(this).val()
        if (lei == ""){
            return;
        }
        $("#tbody").empty();
        $.get('/caileiba?lei='+lei,function (data) {
            $.each(data.results,function(i, n){
                //创建一个tr标签
                $tr = $("<tr class='row'></tr>");
                $td = $("<td class='col-md-4'></td>").appendTo($tr);
                $p = $("<p style='text-align: center'></p>").html(n.name).appendTo($td);
                $("<img style='width: 114px;height: 81px;margin: 0 auto; display: block;' src='../uploads/"+ n.tu + ".jpg'>").appendTo($td)
                $("<td class='col-md-2 zhong'style='line-height: 131px;'></td>").html(n.lei).appendTo($tr);
                $("<td class='col-md-1 zhong' style='line-height: 131px;'></td>").html(n.monge).appendTo($tr);
                if (n.jingpin == "" && n.rexiao == "") {
                    $("<td class='col-md-1 zhong' style='line-height: 131px; color: red;'></td>").html("×").appendTo($tr);
                }else{
                    $("<td class='col-md-1 zhong' style='line-height: 131px; color: green;'></td>").html("√").appendTo($tr);
                }
                if (n.rexiao == "热销") {
                    $("<td class='col-md-1 zhong' style='line-height: 131px; color: green;'></td>").html("√").appendTo($tr);
                }else{
                    $("<td class='col-md-1 zhong' style='line-height: 131px; color: red;'></td>").html("×").appendTo($tr);
                }
                if (n.jingpin == "精品") {
                    $("<td class='col-md-1 zhong' style='line-height: 131px;'></td>").html("√").appendTo($tr);
                }else{
                    $("<td class='col-md-1 zhong' style='line-height: 131px;'></td>").html("×").appendTo($tr);
                }

                $("<td class='col-md-2' style='line-height: 131px;'><input type='button' style='margin: 0 20px;' class='btn btn-danger delbtn' value='删除' data-sid='" + n.name +"'/> <input type='button' id='xiu' class='btn btn-warning' data-toggle='modal' data-target='#myModal'  value='修改' data-sid='" + n.name + "'/></td>").appendTo($tr);
                // 上树
                $tr.appendTo($("#tbody"));
            });
        })
    })
    $("#que").click(function () {
        var sou = $("#sou").val();
        $.get("/search?sou="+sou,function (data) {
            $("#tbody").empty();
            $("#sou").val("");
            $.each(data.results,function(i, n){
                //创建一个tr标签
                $tr = $("<tr class='row'></tr>");
                $td = $("<td class='col-md-4'></td>").appendTo($tr);
                $p = $("<p style='text-align: center'></p>").html(n.name).appendTo($td);
                $("<img style='width: 114px;height: 81px;margin: 0 auto; display: block;' src='../uploads/"+ n.tu + ".jpg'>").appendTo($td)
                $("<td class='col-md-2 zhong'style='line-height: 131px;'></td>").html(n.lei).appendTo($tr);
                $("<td class='col-md-1 zhong' style='line-height: 131px;'></td>").html(n.monge).appendTo($tr);
                if (n.jingpin == "" && n.rexiao == "") {
                    $("<td class='col-md-1 zhong' style='line-height: 131px; color: red;'></td>").html("×").appendTo($tr);
                }else{
                    $("<td class='col-md-1 zhong' style='line-height: 131px; color: green;'></td>").html("√").appendTo($tr);
                }
                if (n.rexiao == "热销") {
                    $("<td class='col-md-1 zhong' style='line-height: 131px; color: green;'></td>").html("√").appendTo($tr);
                }else{
                    $("<td class='col-md-1 zhong' style='line-height: 131px; color: red;'></td>").html("×").appendTo($tr);
                }
                if (n.jingpin == "精品") {
                    $("<td class='col-md-1 zhong' style='line-height: 131px;'></td>").html("√").appendTo($tr);
                }else{
                    $("<td class='col-md-1 zhong' style='line-height: 131px;'></td>").html("×").appendTo($tr);
                }

                $("<td class='col-md-2' style='line-height: 131px;'><input type='button' style='margin: 0 20px;' class='btn btn-danger delbtn' value='删除' data-sid='" + n.name +"'/> <input type='button' id='xiu' class='btn btn-warning' data-toggle='modal' data-target='#myModal'  value='修改' data-sid='" + n.name + "'/></td>").appendTo($tr);
                // 上树
                $tr.appendTo($("#tbody"));
            });
        })
    })
</script>
