    // 排序
    var compare = function (prop) {
        return function (obj1, obj2) {
            var val1 = obj1[prop];
            var val2 = obj2[prop];
            if (!isNaN(Number(val1)) && !isNaN(Number(val2))) {
                val1 = Number(val1);
                val2 = Number(val2);
            }
            if (val1 < val2) {
                return -1;
            } else if (val1 > val2) {
                return 1;
            } else {
                return 0;
            }
        }
    }
    gotopage();
    //Ajax请求，请求JSON数据
    function gotopage(pagenumber){
        //清空
        $("#tbody").empty();
        //获得新的数据
        $.get("/leibie1?page=" + pagenumber,function(data){
            console.log(data.results);
            var paixu =data.results.sort(compare("sid"))
            $.each(paixu ,function(i, n){
                console.log(n)
                $tr = $("<tr></tr>");
                $('<td></td>').html(n.sid).appendTo($tr);
                $("<td></td>").html(n.name == true ? "√":"X").appendTo($tr);
                $('<td><button name="'+n.sid+'" value="'+n.sid+'" type="button" data-sid="'+n.sid+'" class="btn btn-primary" data-toggle="modal" data-target="#myModa2">修改</button><button name="sid" value="'+n.sid+'" type="button" data-sid="'+n.sid+'" class="btn btn-primary" data-toggle="modal" data-target="#myModa4">删除</button></td>').appendTo($tr);
                //上树
                $tr.appendTo($("#tbody"));
            });
        });
    }
    //添加员工
    $("#btn").click(function(){
        $.post("/leibie",{
            sid: $("input[name=sid]").val(),
            name : $("input[name=name]:checked").val()
        },function(data){
            if(data.result == 1){
                alert("添加成功！");
                gotopage(1);
                $("input[type=text]").val("");
            }else if(data.result == -1){
                alert("提交失败，菜名被占用！");
            }else if(data.result == -2){
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    });
    //修改员工
    $("#btn2").click(function(){
        var sid = $("button[name=sid]").val();
        console.log(sid);
        $.post("/leibie3/" + sid,{
            sid:$("input[name=sid2]").val(),
            name :$("input[name=name2]:checked").val()
        },function(data){
            if(data.result == 1){
                gotopage(1);
                alert("修改成功！");
            }else{
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    });
    //删除员工
    $("#btn3").click(function () {
        var sid = $("button[name=sid]").val();
        var tr = $("button[name=sid]").parents("tr");
        console.log(sid)
        $.ajax({
            url : "/leibie2/" + sid,
            type : "delete",
            success : function(data){
                if(data.result == 1){
                    alert("删除成功");
                    tr.remove();
                    gotopage(1);
                }else{
                    alert("服务器错误！");
                }
            }
        });
    });





    //退出账号
